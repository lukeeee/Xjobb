<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="se.xjobb.scardfeud.Stats" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#005500"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:layout_width="600dp"
                android:layout_height="120dp"
                android:textSize="40sp"
                android:background="@drawable/button"
                android:textStyle="bold"
                android:id="@+id/gamestat"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/youflag"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="18dp"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/opponentFlag"
                android:layout_marginLeft="508dp"
                android:layout_marginTop="18dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="14dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ViewAnimator
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateFirstView="false"
                android:inAnimation="@anim/abc_slide_in_top"
                android:id="@+id/tjenis">
            <ImageView
                android:layout_width="320dp"
                android:layout_height="460dp"
                android:id="@+id/gamecards"/>
            </ViewAnimator>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="14dp"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:layout_width="600dp"
                android:layout_height="120dp"
                android:textSize="80sp"
                android:text="Higher"
                android:background="@drawable/button"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:id="@+id/higher"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/arrow_high"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="18dp"
                android:id="@+id/arrowhigl"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/arrow_high"
                android:layout_marginLeft="470dp"
                android:layout_marginTop="18dp"
                android:id="@+id/arrowhigr"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:layout_width="600dp"
                android:layout_height="120dp"
                android:textSize="80sp"
                android:text="Lower"
                android:background="@drawable/button"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:id="@+id/lower"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/arrow_low"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="18dp"
                android:id="@+id/arrowlowl"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/arrow_low"
                android:layout_marginLeft="470dp"
                android:layout_marginTop="18dp"
                android:id="@+id/arrowlowr"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:layout_width="600dp"
                android:layout_height="120dp"
                android:textSize="80sp"
                android:text="Pass"
                android:background="@drawable/button"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:id="@+id/pass"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/arrow_pass_l"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="18dp"
                android:id="@+id/arrowpassl"/>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/arrow_pass_r"
                android:layout_marginLeft="470dp"
                android:layout_marginTop="18dp"
                android:id="@+id/arrowpassr"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/gamelnrMain"
            android:layout_gravity="center|bottom">

        </LinearLayout>
        <TextView
            android:layout_marginTop="-440dp"
            android:layout_width="600dp"
            android:layout_height="280dp"
            android:background="@drawable/button"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="50dp"
            android:textStyle="bold"
            android:text="Waiting for opponent"
            android:id="@+id/waiting"/>



    </LinearLayout>
</ScrollView>