<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="se.xjobb.scardfeud.Stats" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#005500"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:layout_width="600dp"
                android:layout_height="110dp"
                android:textSize="40sp"
                android:background="@drawable/button"
                android:textStyle="bold"
                android:id="@+id/gamestat"
                android:shadowColor="#000"
                android:shadowRadius="30"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="360dp"
                android:layout_height="500sp"
                android:id="@+id/gamecards"/>
            <!--Button
                android:layout_width="180dp"
                android:layout_height="250sp"
                android:background="@drawable/start"
                android:id="@+id/start_game"/-->
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <Button
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:textSize="80sp"
            android:text="Higher"
            android:background="@drawable/button"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:id="@+id/higher"
            android:shadowColor="#000"
            android:shadowRadius="30"
            android:drawableRight="@drawable/arrow_up_l"
            android:drawableLeft="@drawable/arrow_up_r"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <Button
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:textSize="80sp"
            android:text="Lower"
            android:background="@drawable/button"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:id="@+id/lower"
            android:shadowColor="#000"
            android:shadowRadius="30"
            android:drawableRight="@drawable/arrow_down_l"
            android:drawableLeft="@drawable/arrow_down_r"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <Button
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:textSize="80sp"
            android:text="Pass "
            android:background="@drawable/button"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:id="@+id/pass"
            android:shadowColor="#000"
            android:shadowRadius="30"
            android:drawableRight="@drawable/arrow_pass_r"
            android:drawableLeft="@drawable/arrow_pass_l"/>
        <TextView
            android:layout_marginTop="-300dp"
            android:layout_width="600dp"
            android:layout_height="280dp"
            android:background="@drawable/button"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="50dp"
            android:textStyle="bold"
            android:text="Waiting for opponent"
            android:id="@+id/waiting"/>


    </LinearLayout>
</ScrollView>