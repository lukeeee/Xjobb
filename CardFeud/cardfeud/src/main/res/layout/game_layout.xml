<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="se.xjobb.scardfeud.Stats" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#005500"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Button
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:text="Lukas  ( 7-5 )  Emil"
            android:textSize="20sp"
            android:background="@drawable/button"
            android:textStyle="bold"
            android:id="@+id/gamestat"
            android:drawableRight="@drawable/se"
            android:drawableLeft="@drawable/se"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="250sp"
            android:background="@drawable/c_two"/>
        <Button
            android:layout_width="180dp"
            android:layout_height="250sp"
            android:background="@drawable/start"
            android:id="@+id/start_game"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="Higher"
        android:background="@drawable/button"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:id="@+id/higher"
        android:drawableRight="@drawable/arrow_up_l"
        android:drawableLeft="@drawable/arrow_up_r"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="Lower"
        android:background="@drawable/button"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:id="@+id/lower"
        android:drawableRight="@drawable/arrow_down_l"
        android:drawableLeft="@drawable/arrow_down_r"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="Pass "
        android:background="@drawable/button"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:id="@+id/pass"
        android:drawableRight="@drawable/arrow_pass_r"
        android:drawableLeft="@drawable/arrow_pass_l"/>


</LinearLayout>
    </ScrollView>