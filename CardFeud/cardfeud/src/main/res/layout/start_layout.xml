<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pager"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="se.xjobb.scardfeud.Stats" >
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#005500"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Lukas"
        android:textSize="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="20dp"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:id="@+id/user"/>

    <ImageView
        android:layout_width="33dp"
        android:layout_height="30dp"
        android:background="@drawable/se"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Button
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:text="Start A New Game"
            android:textSize="30sp"
            android:background="@drawable/button"
            android:textStyle="bold"
            android:id="@+id/Btn_newGame"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Games"
        android:textSize="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:id="@+id/games"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="        Your turn against\n        Emil               7-5"
        android:background="@drawable/button"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:id="@+id/game1"
        android:drawableRight="@drawable/arrow"/>
    <ImageView
        android:layout_width="54dp"
        android:layout_height="51dp"
        android:background="@drawable/se"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="        Your turn against\n        Stanley           0-0"
        android:background="@drawable/button"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:id="@+id/game2"
        android:drawableRight="@drawable/arrow"/>
    <ImageView
        android:layout_width="54dp"
        android:layout_height="51dp"
        android:background="@drawable/us"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Finished Games"
        android:textSize="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textStyle="bold"
        android:background="@drawable/button"
        android:id="@+id/fin_game"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="You lost against\nEmil            8-10"
        android:background="@drawable/btn_lost"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:id="@+id/finGame1"/>
        <ImageView
            android:layout_width="54dp"
            android:layout_height="51dp"
            android:background="@drawable/se"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="You won against\nBenteke      10-4"
        android:background="@drawable/btn_win"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:id="@+id/finGame2"/>
    <ImageView
        android:layout_width="54dp"
        android:layout_height="51dp"
        android:background="@drawable/ng"/>
    </RelativeLayout>


</LinearLayout>

